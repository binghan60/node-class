<%- include('../parts/html-head') %> 
<%- include('../parts/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <form class="d-flex">
                <input
                    class="form-control me-2"
                    type="search"
                    placeholder="Search"
                    name="search"
                    value="<%= locals.query && query.search ? query.search : '' %>"
                />
                <button class="btn btn-outline-success" type="submit">
                    Search
                </button>
            </form>
        </div>
    </div>
    <!-- 分頁按鈕 -->
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="?page=1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= page-1 %>">Previous</a>
                    </li>

                    <% for(let i=page-5; i<=page+5; i++) if(i>=1 &&
                    i<=totalPages){ 
                        const obj = {page: i};
                        if(query.search){
                            obj.search = query.search;
                        }
                        const myLink = new URLSearchParams(obj).toString();
                        %>
                    <li class="page-item <%= page===i ? 'active' : '' %>">
                        <a class="page-link" href="?<%= myLink %>"><%= i %></a>
                    </li>
                    <% } %>

                    <li class="page-item">
                        <a class="page-link" href="?page=<%= page+1 %>">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= totalPages %>">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col">
            
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Birthday</th>
                        <th scope="col">Address</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i of rows){ %>
                    <tr>
                        <!--  %= 內建htmltities不用再跳脫 -->
                        <td><%= i.sid %></td>
                        <td><%= i.name %></td>
                        <td><%= i.email %></td>
                        <td><%= i.mobile %></td>
                        <td><%= toDateString(i.birthday) %></td>
                        <td><%= i.address %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../parts/scripts') %> 
<%- include('../parts/html-foot') %>